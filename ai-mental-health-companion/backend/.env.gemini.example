# =============================================================================
# AI MENTAL HEALTH COMPANION - GEMINI INTEGRATION CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your settings
# This example includes complete Gemini API integration setup

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME=AI Mental Health Companion
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long-for-security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose one of the following database configurations:

# SQLite (Development - Recommended for getting started)
DATABASE_URL=sqlite:///./data/mental_health_companion.db

# SQL Server (Production)
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# PostgreSQL (Alternative)
# DATABASE_URL=postgresql://username:password@localhost/mental_health_companion

DATABASE_POOL_SIZE=5
DATABASE_POOL_OVERFLOW=10
DATABASE_ECHO=False

# =============================================================================
# GOOGLE GEMINI API CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-google-gemini-api-key-here

# Enable Gemini Integration
GEMINI_ENABLED=True

# Gemini Model Configuration
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=512

# Safety Settings (BLOCK_NONE, BLOCK_ONLY_HIGH, BLOCK_MEDIUM_AND_ABOVE, BLOCK_LOW_AND_ABOVE)
GEMINI_SAFETY_THRESHOLD=BLOCK_MEDIUM_AND_ABOVE

# Feature Flags - Choose what to use Gemini for
USE_GEMINI_FOR_RESPONSES=True
USE_GEMINI_FOR_EMOTIONS=False
GEMINI_FALLBACK_ENABLED=True

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# AI_MODEL_TYPE options:
# - rule_based: Traditional rule-based emotion detection and responses
# - gemini: Pure Gemini AI for both emotion detection and responses
# - hybrid: Combine Gemini AI with rule-based fallbacks (RECOMMENDED)
# - ml: Machine learning models (not implemented yet)
AI_MODEL_TYPE=hybrid

EMOTION_DETECTION_THRESHOLD=0.6
SAFETY_KEYWORDS_ENABLED=True

# =============================================================================
# OTHER EXTERNAL API KEYS (OPTIONAL)
# =============================================================================
# These are optional - leave blank if not using
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=

# =============================================================================
# CORS AND SECURITY
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,your-api-domain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# =============================================================================
# REDIS CACHE (OPTIONAL)
# =============================================================================
# Uncomment if you want to use Redis for caching
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# =============================================================================
# MONITORING AND METRICS
# =============================================================================
PROMETHEUS_METRICS_ENABLED=False
HEALTH_CHECK_ENABLED=True

# =============================================================================
# PRIVACY AND DATA RETENTION
# =============================================================================
DATA_RETENTION_DAYS=365
ENCRYPT_SENSITIVE_DATA=True
ANONYMOUS_USAGE_ANALYTICS=False

# =============================================================================
# FEATURE FLAGS
# =============================================================================
CHAT_HISTORY_ENABLED=True
MOOD_TRENDS_ENABLED=True
DAILY_CHECKIN_ENABLED=True
COPING_TOOLS_ENABLED=True

# =============================================================================
# CRISIS DETECTION SETTINGS
# =============================================================================
# These keywords trigger crisis intervention protocols
# Modify with caution - these are safety-critical
CRISIS_KEYWORDS=suicide,kill myself,end my life,hurt myself,self harm,cutting,overdose,die,death wish,worthless,hopeless,can't go on,no point in living,want to disappear,better off dead,end it all,can't take it anymore

# =============================================================================
# GEMINI INTEGRATION EXAMPLES AND TESTING
# =============================================================================
# For testing your Gemini integration, you can use these sample configurations:

# Conservative settings (safer, less creative responses)
# GEMINI_TEMPERATURE=0.3
# GEMINI_SAFETY_THRESHOLD=BLOCK_LOW_AND_ABOVE

# Balanced settings (recommended for production)
# GEMINI_TEMPERATURE=0.7
# GEMINI_SAFETY_THRESHOLD=BLOCK_MEDIUM_AND_ABOVE

# More creative settings (use with caution in mental health context)
# GEMINI_TEMPERATURE=1.0
# GEMINI_SAFETY_THRESHOLD=BLOCK_ONLY_HIGH

# =============================================================================
# DEPLOYMENT CONFIGURATIONS
# =============================================================================

# Development Environment
# ENVIRONMENT=development
# DEBUG=True
# DATABASE_ECHO=True
# LOG_LEVEL=DEBUG
# RATE_LIMIT_ENABLED=False

# Production Environment
# ENVIRONMENT=production
# DEBUG=False
# DATABASE_ECHO=False
# LOG_LEVEL=INFO
# RATE_LIMIT_ENABLED=True
# PROMETHEUS_METRICS_ENABLED=True

# =============================================================================
# QUICK START INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.gemini.example .env
# 2. Get Gemini API key: https://makersuite.google.com/app/apikey
# 3. Replace GEMINI_API_KEY with your actual key
# 4. Replace SECRET_KEY with a secure 32+ character string
# 5. Install requirements: pip install -r requirements.txt
# 6. Run the server: python -m app.main
# 7. Test at: http://localhost:8000/docs

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# - Never commit your .env file to version control
# - Keep your API keys secure and rotate them regularly
# - The hybrid model is recommended for production use
# - Monitor your Gemini API usage and costs
# - Test thoroughly before deploying to production
# - Consider rate limits when using Gemini API
