# AI Mental Health Companion - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (True/False)
DEBUG=True

# Application secret key (generate a secure random string, minimum 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-min-32-characters-long-generate-new-one

# Server configuration
HOST=0.0.0.0
PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Choose ONE of the database configurations below:

# Option 1: SQLite (Development/Testing)
# Uncomment the line below for local development
DATABASE_URL=sqlite:///./data/mental_health_companion.db

# Option 2: SQL Server (Production)
# Uncomment and configure the line below for production
# Replace username, password, server, and database with your actual values
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Option 3: Azure SQL Database (Cloud Production)
# DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net/database?driver=ODBC+Driver+17+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no&Connection+Timeout=30

# Database connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_POOL_OVERFLOW=10
DATABASE_ECHO=False

# ============================================================================
# CORS AND SECURITY SETTINGS
# ============================================================================

# Allowed CORS origins (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Allowed hosts for security
ALLOWED_HOSTS=localhost,127.0.0.1,your-api-domain.com

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# AI/NLP CONFIGURATION
# ============================================================================

# AI model type (rule_based or ml)
AI_MODEL_TYPE=rule_based

# Emotion detection confidence threshold (0.0 to 1.0)
EMOTION_DETECTION_THRESHOLD=0.6

# Enable safety keyword detection
SAFETY_KEYWORDS_ENABLED=True

# Optional: OpenAI API key for advanced AI features
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: HuggingFace API key for ML models
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ============================================================================
# RATE LIMITING
# ============================================================================

# Enable rate limiting
RATE_LIMIT_ENABLED=True

# Requests per minute per IP
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# Optional: Log file path (leave empty to log to console only)
# LOG_FILE=logs/mental_health_companion.log

# ============================================================================
# CACHING (OPTIONAL)
# ============================================================================

# Optional: Redis URL for caching
# REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds
CACHE_TTL=300

# ============================================================================
# MONITORING AND METRICS (OPTIONAL)
# ============================================================================

# Enable Prometheus metrics
PROMETHEUS_METRICS_ENABLED=False

# Enable health check endpoint
HEALTH_CHECK_ENABLED=True

# ============================================================================
# PRIVACY AND DATA RETENTION
# ============================================================================

# Data retention period in days
DATA_RETENTION_DAYS=365

# Encrypt sensitive user data
ENCRYPT_SENSITIVE_DATA=True

# Collect anonymous usage analytics
ANONYMOUS_USAGE_ANALYTICS=False

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable chat history storage
CHAT_HISTORY_ENABLED=True

# Enable mood trend analysis
MOOD_TRENDS_ENABLED=True

# Enable daily check-in feature
DAILY_CHECKIN_ENABLED=True

# Enable coping tools feature
COPING_TOOLS_ENABLED=True

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# These settings are only used in development environment

# Enable auto-reload for development
DEV_RELOAD=True

# Enable detailed error pages
DEV_SHOW_ERRORS=True

# Seed database with sample data
DEV_SEED_DATA=True

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# These settings override defaults in production

# Disable debug mode in production
PROD_DEBUG=False

# Use secure cookies in production
PROD_SECURE_COOKIES=True

# Enable HTTPS redirect in production
PROD_HTTPS_REDIRECT=True

# ============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# ============================================================================

# Email service for notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True

# SMS service for crisis notifications (optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# CRISIS RESOURCES CONFIGURATION
# ============================================================================

# Crisis detection sensitivity (low, medium, high)
CRISIS_DETECTION_SENSITIVITY=medium

# Automatically suggest professional help for high-risk situations
AUTO_SUGGEST_PROFESSIONAL_HELP=True

# Crisis hotline numbers (comma-separated)
CRISIS_HOTLINES=988,1-800-273-8255

# ============================================================================
# BACKUP AND RECOVERY (OPTIONAL)
# ============================================================================

# Enable automated backups
# AUTO_BACKUP_ENABLED=False

# Backup frequency in hours
# BACKUP_FREQUENCY_HOURS=24

# Backup storage location
# BACKUP_STORAGE_PATH=./backups

# ============================================================================
# INTEGRATION SETTINGS (OPTIONAL)
# ============================================================================

# Google Analytics tracking ID (optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# New Relic license key for performance monitoring (optional)
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ============================================================================
# NOTES AND INSTRUCTIONS
# ============================================================================

# 1. SECURITY: Never commit this file with real credentials to version control
# 2. Generate a strong SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. For production, use environment variables or a secure secrets manager
# 4. Update ALLOWED_ORIGINS with your actual frontend URLs
# 5. Configure your database connection string properly
# 6. Enable logging to files in production by setting LOG_FILE
# 7. Consider using Redis for caching in high-traffic scenarios
# 8. Enable monitoring and metrics in production environments
# 9. Review and adjust rate limiting settings based on your needs
# 10. Test all configurations in a staging environment before production deployment

# ============================================================================
# EXAMPLE PRODUCTION CONFIGURATION
# ============================================================================

# For reference, here's what a production .env might look like:
#
# ENVIRONMENT=production
# DEBUG=False
# SECRET_KEY=your-actual-secret-key-32-chars-min
# DATABASE_URL=mssql+pyodbc://user:pass@prod-server/db?driver=ODBC+Driver+17+for+SQL+Server
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# LOG_LEVEL=INFO
# LOG_FILE=/var/log/mental-health-companion/app.log
# REDIS_URL=redis://prod-redis:6379/0
# PROMETHEUS_METRICS_ENABLED=True
# RATE_LIMIT_ENABLED=True
# ENCRYPT_SENSITIVE_DATA=True
